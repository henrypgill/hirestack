{
  "name": "hirestack",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "clear; turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "migrate": "turbo run migrate",
    "db:generate": "turbo run db:generate"
  },
  "devDependencies": {
    "@hirestack/eslint-config": "*",
    "@hirestack/typescript-config": "*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
